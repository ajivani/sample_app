<h1>Edit user - <%="#{@user.name}"%></h1>
<!--it knows to edit users and update them because @user.new_record? == false, if it were true it'd do a post request with the create method-->
<%= form_for(@user) do |f| %>
  <%= render 'fields', :f => f %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" target="_blank">change</a>
</div>


