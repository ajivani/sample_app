<li> 
    <%= link_to (gravatar_for user, :size=>30), user_path(user) %>
    <%= link_to user.name, user_path(user) %>
    <% if current_user.admin? %>
      | <%= link_to 'delete', user, :method=>:delete, :confirm=>"You sure?",
                                      :title=>"Delete #{user.name}" %>
    <%end%>
</li> 

